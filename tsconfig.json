{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "ES5",
        "strict": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "paths": {
            "~ui/*": ["apps/extension-ui/*"],
            "~script/*": ["apps/content-script/*"]
        }
    },
    "include": [
        "./apps/"
    ],
}
